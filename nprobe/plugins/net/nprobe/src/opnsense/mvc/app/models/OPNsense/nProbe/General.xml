<model>
    <mount>//OPNsense/nprobe/general</mount>
    <description>nprobe configuration</description>
    <version>0.0.1</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>
        <interface type="InterfaceField">
            <Required>Y</Required>
            <Multiple>N</Multiple>
        </interface>
        <zmqendpoint type="TextField">
            <Required>Y</Required>
            <default>tcp://127.0.0.1:5556</default>
        </zmqendpoint>
        <zmqprobemode type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </zmqprobemode>
        <ipsmode type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </ipsmode>
        <ips_events type="BooleanField">
            <default>0</default>
            <Required>N</Required>
        </ips_events>
	<localnet type="NetworkField">
            <Required>N</Required>
            <FieldSeparator>,</FieldSeparator>
            <asList>Y</asList>
        </localnet>  
        <protocols type="OptionField">
            <Required>N</Required>
            <multiple>Y</multiple>
            <OptionValues>
                <Option1 value="0">Unknown</Option1>
                <Option2 value="1">FTP Control</Option2>
                <Option3 value="2">POP3</Option3>
            </OptionValues>
        </protocols>
        <category type="OptionField">
            <Required>N</Required>
            <multiple>Y</multiple>
            <OptionValues>
                <Option1 value="0">Network</Option1>
                <Option2 value="1">VPN</Option2>
                <Option3 value="2">Video</Option3>
            </OptionValues>
        </category>
        <flowrisks type="OptionField">
            <Required>N</Required>
            <multiple>Y</multiple>
            <OptionValues>
                <Option1 value="1">XSS attack</Option1>
                <Option2 value="2">SQL injection</Option2>
                <Option3 value="3">RCE injection</Option3>
            </OptionValues>
        </flowrisks>
        <countries type="OptionField">
            <Required>N</Required>
            <multiple>Y</multiple>
            <OptionValues>
              <Option1 value="IT">Italy</Option1>
                <Option2 value="ES">Spain</Option2>
                <Option3 value="DE">Germany</Option3>
            </OptionValues>
        </countries>
        <continents type="OptionField">
            <Required>N</Required>
            <multiple>Y</multiple>
            <OptionValues>
                <Option1 value="Africa">Africa</Option1>
                <Option2 value="Asia">Asia</Option2>
                <Option3 value="Asia-Pacific">Asia-Pacific</Option3>
                <Option4 value="Europe">Europe</Option4>
                <Option5 value="North America">North America</Option5>
                <Option6 value="South America">South America</Option6>
            </OptionValues>
        </continents>
        <zmq_ips_endpoint type="TextField">
            <Required>Y</Required>
            <default>tcp://127.0.0.1:5557</default>
        </zmq_ips_endpoint>
    </items>
</model>
